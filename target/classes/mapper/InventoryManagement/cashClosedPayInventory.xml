<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssaw.InventoryManagement.mapper.CashClosedPayInventoryMapper">
    <insert id="insertCashClosedPayInventory">
        insert into CashClosedPayInventory values (#{crcsId},#{businessDate},#{cashAccountName},#{fundId},#{fundName},#{businessType},#{businessStatus},#{initialSigns},#{toalMoney})
    </insert>

    <update id="updateCashClosedPayInventory">
        update CashClosedPayInventory set businessDate=#{businessDate},cashAccountName=#{cashAccountName},fundId=#{fundId},fundName=#{fundName},businessType=#{businessType},businessStatus=#{businessStatus},initialSigns=#{initialSigns},toalMoney=#{toalMoney} where crcsId=#{crcsId}
    </update>

    <delete id="deleteCashClosedPayInventory">
        delete from CashClosedPayInventory where crcsId=#{crcsId}
    </delete>

    <select id="selectCashClosedPayInventory" resultType="com.ssaw.InventoryManagement.entity.CashClosedPayInventory">
        select * from CashClosedPayInventory
    </select>
</mapper>